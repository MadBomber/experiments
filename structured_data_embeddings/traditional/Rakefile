require_relative 'lib/database_connection'
require 'rake'
require 'active_record/railtie'

# Parse command-line options
options = DatabaseConnection.parse_options

# Setup the database connection with the parsed options
DatabaseConnection.setup(options)

# Load the database configuration
db_config = DatabaseConnection.load_configuration

# Setup ActiveRecord configurations
ActiveRecord::Base.configurations = { 'development' => db_config }

# Load the rake tasks for db:create and db:migrate
namespace :db do
  desc 'Create the database'
  task :create do
    ActiveRecord::Base.establish_connection(db_config.merge('database' => 'postgres'))
    ActiveRecord::Tasks::DatabaseTasks.create_current
    puts 'Database created'
  end

  desc 'Run database migrations'
  task :migrate do
    ActiveRecord::Base.establish_connection(db_config)
    ActiveRecord::Migrator.migrations_paths = ['db/migrate']
    ActiveRecord::MigrationContext.new(ActiveRecord::Migrator.migrations_paths).migrate
    puts 'Migrations run'
  end

  desc 'Drop the database'
  task :drop do
    ActiveRecord::Base.establish_connection(db_config.merge('database' => 'postgres'))
    ActiveRecord::Tasks::DatabaseTasks.drop_current
    puts 'Database dropped'
  end
end

puts "Using #{DatabaseConnection.values_column} column for values"
