source 'https://rubygems.org'

gem 'devise'                  # Flexible authentication solution for Rails with Warden
gem 'cancancan'               # Simple authorization solution for Rails.
gem 'role_core'               # RoleCore is a Rails engine which could provide essential industry of Role-based access control.
gem 'rolify'                  # Roles library with resource scoping
gem 'kan'                     # Simple, light and functional authorization library

gem 'activeadmin'             # The administration framework for Ruby on Rails.
gem 'rails_admin'             # Admin for Rails

gem 'debug_me'                # A tool to print the labeled value of variables.
gem 'awesome_print'           # Pretty print Ruby objects with proper indentation and colors

gem 'rails'                   # Full-stack web application framework.
gem 'sqlite3'                 # This module allows Ruby programs to interface with the SQLite3 database engine (http://www.sqlite.org)
gem 'puma'                    # Puma is a simple, fast, threaded, and highly concurrent HTTP 1.1 server for Ruby/Rack applications
gem 'sass-rails'              # Sass adapter for the Rails asset pipeline.
gem 'haml-rails'              # let your Gemfile do the configuring
gem 'jbuilder'                # Create JSON structures via a Builder-style DSL

gem 'byebug'                  # Ruby fast debugger - base + CLI
gem 'web-console'             # A debugging tool for your Ruby on Rails applications.
gem 'spring'                  # Rails application preloader


gem 'irbtools'                # Irbtools happy IRB.
gem 'irbtools-more'           # irbtools-more adds bond and looksee to IRB.
gem 'sketches'                # Sketches allows you to create and edit Ruby code from the comfort of your editor, while having it safely reloaded in IRB whenever changes to the code are saved.
