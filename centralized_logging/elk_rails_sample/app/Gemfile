source 'https://rubygems.org'

gem 'rails'           # Full-stack web application framework.
gem 'pg'              # Pg is the Ruby interface to the {PostgreSQL RDBMS}[http://www.postgresql.org/]
gem 'puma'            # Puma is a simple, fast, threaded, and highly concurrent HTTP 1.1 server for Ruby/Rack applications
gem 'sass-rails'      # Sass adapter for the Rails asset pipeline.
gem 'uglifier'        # Ruby wrapper for UglifyJS JavaScript compressor
gem 'coffee-rails'    # CoffeeScript adapter for the Rails asset pipeline.
gem 'therubyracer'    # Embed the V8 JavaScript interpreter into Ruby

gem 'jquery-rails'          # Use jQuery with Rails 4+
gem 'turbolinks'            # Turbolinks makes navigating your web application faster
gem 'jbuilder'              # Create JSON structures via a Builder-style DSL

# gem 'lograge'
# gem 'logstash-event'
gem 'rails_semantic_logger'  # Feature rich logging framework that replaces the Rails logger.

group :development, :test do
  # Call 'byebug' anywhere in the code to stop execution and get a debugger console
  gem 'byebug', platform: :mri  # Ruby 2.0 fast debugger - base + CLI
end

group :development do
  gem 'web-console'             # A debugging tool for your Ruby on Rails applications.
  gem 'listen'                  # Listen to file modifications
  gem 'spring'                  # Rails application preloader
  gem 'spring-watcher-listen'   # Makes spring watch files using the listen gem.
  gem 'awesome_print'
  gem 'debug_me'
end

group :test do
  gem 'rspec'                   # rspec-2.14.1
end
