gem 'eventmachine'          # The reactor pattern for TCP/UDP comms

gem "notify"                # provides notification functionalities on cross platforms
gem "libnotify"             # Supports alert notifications in linux

gem "rb-inotify"            # Linux: Ruby binding to the libnotify
# gem "win32-changenotify"  # win32: for use with em-dir-watcher
# gem "win32-event"         # win32: for use with em-dir-watcher
gem "em-dir-watcher"        # monitors a directory for modifications (cross-platform; see rubygems/org)


