# exoeriments/graphql/Gemfile

source 'https://rubygems.org'

gem 'awesome_print'  # Pretty print Ruby objects with proper indentation and colors
gem 'debug_me'       # A tool to print the labeled value of variables.
gem 'kick_the_tires' # Provides some basic methods/assertions that are handy for exploring a new ruby library.

gem 'sinatra'        # Classy web-development dressed in a DSL

gem 'graphql'                 # A GraphQL language and runtime for Ruby
gem 'graphql-active_record'   # Active Record Helpers for graphql-ruby
gem 'graphql-batch'           # A query batching executor for the graphql gem
gem 'graphql-client'          # GraphQL Client
gem 'graphql-docs'            # Easily generate beautiful documentation from your GraphQL schema.
gem 'graphql-errors'          # Simple error handler for graphql-ruby
gem 'graphql-guard'           # Simple authorization gem for graphql-ruby
gem 'graphql-preload'         # Preload ActiveRecord associations with graphql-batch
gem 'graphql-smart_select'    # Plugin for graphql-ruby gem
gem 'graphql_schema'          # Classes for convenient use of GraphQL introspection result
gem 'rspec-graphql_matchers'  # Collection of rspec matchers to test your graphQL api schema.
