-# layout.haml
!!!
%html
  %head
    %title Application by VanHoozer
    %link{:rel => :stylesheet, :type => :"text/css", :href => "/css/app.css"}
    = LeafletHelper::L.comment "before"
    = LeafletHelper::L.init
    = LeafletHelper::L.comment "after"
  %body

    #logo_header

      %h1 
        Application by VanHoozer
        %span{ :class =>"home" }
          %a{ :href => "/" }
            Home

    #masthead
      #inner-masthead
        %table{ width: "100%", border: "0", cellspacing:"0", cellpadding: "0", id: "header-table"}
          %tbody
            %tr
              %td
                %a{:href => 'http://dvanhoozer.herokuapp.com'}
                  %img{ src: "/images/bomb.png", id: "logo", width: "204", height: "50", alt: "@madbomber" }
              %td
                %h1 Next Generation Technology
                %p Our Next Generation Technology solutions address our ability to deliver innovative solutions to our customerâ€™s biggest challenges in cloud infrastructure, big data analytics, cyber security, and mobility, along with the robust solutions of our trusted alliance partners.

    #main

      = yield

    #footer
      = partial :footer        

    - map_id = 'map'; map_options = { latitude: 37.235, longitude: -115.811111, min_zoom: 2, max_zoom: 18}
    = LeafletHelper::L.show_map(map_id, map_options)
    = LeafletHelper::L.add_openstreetmap_layer(map_id, map_options)
    = LeafletHelper::L.add_support_for_markers(map_id, route: "#{map_id}/markers")

    - map_id = 'map2'; map_options = { latitude: 37.235, longitude: -115.811111, min_zoom: 2, max_zoom: 18}
    = LeafletHelper::L.show_map(map_id, map_options)
    = LeafletHelper::L.add_mapbox_layer(map_id, map_options)
    = LeafletHelper::L.add_support_for_markers(map_id, route: "#{map_id}/markers")
